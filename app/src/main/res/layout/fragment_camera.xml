<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:background="@drawable/card_background"></View>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Share Your Location"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:text="Tell us a little about where you are!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/longitudeTag"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longText"
        android:layout_marginTop="165dp"
        android:background="@color/White"
        android:text="Longitude:"
        android:textAlignment="textEnd"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/longitudeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longText"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="52pt"
        android:background="@color/White"
        android:text="Loading..."
        android:textSize="18dp"
        android:textAlignment="textStart"/>



    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/latitudeTag"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longText"
        android:layout_marginTop="185dp"
        android:background="@color/White"
        android:text="Latitude:"
        android:textAlignment="textEnd"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/latitudeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longText"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="52pt"
        android:background="@color/White"
        android:text="Loading..."
        android:textSize="18dp"
        android:textAlignment="textStart"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:text="Choose a Title"

        />

    <EditText
        android:id="@+id/locationTitleInput"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="245dp"
        android:ems="10"
        android:hint="Location Title"
        android:inputType="text"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:text="Choose write a description"

        />

    <EditText
        android:id="@+id/locationDescInput"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="315dp"
        android:ems="10"
        android:hint="Location description"
        android:inputType="text"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="75dp"
        android:text="Rate this location"

        />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="490dp" />


    <Button
        android:id="@+id/shareLocationBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="Share this location" />



</FrameLayout>